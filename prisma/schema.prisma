generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  // id       String     @id @default(auto()) @map("_id") @db.ObjectId
  id               String     @id @default(uuid())
  email            String     @unique
  name             String
  password         String
  posts            LostItem[]
  comments         Comment[]
  founderClaims    Claim[]    @relation("founder")
  claimeeClaims    Claim[]    @relation("claimee")
  claims           Claim[]
  sentMessages     Message[]  @relation("sender")
  receivedMessages Message[]  @relation("receiver")
  profile          Profile?
}

model LostItem {
  id          String    @id @default(uuid())
  name        String
  description String
  image       String
  founder     User      @relation(fields: [founderId], references: [id])
  founderId   String
  comments    Comment[]
  claims      Claim[]
  isFound     Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  post   LostItem @relation(fields: [postId], references: [id])
  postId String
}

model Claim {
  id      String  @id @default(uuid())
  message String
  clue1   String?
  clue2   String?
  clue3   String?
  image   String?

  founder   User   @relation("founder", fields: [founderId], references: [id])
  founderId String

  claimee   User   @relation("claimee", fields: [claimeeId], references: [id])
  claimeeId String
  user      User?  @relation(fields: [userId], references: [id])

  item   LostItem @relation(fields: [itemId], references: [id])
  itemId String

  userId String?

  createdAt DateTime @default(now())
}

model Message {
  id      String @id @default(uuid())
  message String

  sender   User   @relation("sender", fields: [senderId], references: [id])
  senderId String

  receiver   User   @relation("receiver", fields: [receiverId], references: [id])
  receiverId String

  createdAt DateTime @default(now())
}

enum Department {
  CITC
  COT
  CEA
  CSM
}

model Profile {
  id             String      @id @default(uuid())
  profilePicture String?
  department     Department?
  moreInfo       String?
  fbLink         String?
  yearLevel      String?

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
