generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  // id       String     @id @default(auto()) @map("_id") @db.ObjectId
  id       String     @id @default(uuid())
  email    String     @unique
  name     String
  password String
  posts    LostItem[]
}

model LostItem {
  id          String @id @default(uuid())
  name        String
  description String
  image       String
  founder     User   @relation(fields: [founderId], references: [id])
  founderId   String
}
